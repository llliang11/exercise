<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_id"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_id"
        android:text="@string/Start_btn"
        android:layout_below="@id/text_id"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bind_id"
        android:text="@string/Bind_btn"
        android:layout_alignTop="@+id/start_id"
        android:layout_toRightOf="@+id/start_id"
        android:layout_toEndOf="@+id/start_id"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get value"
        android:id="@+id/get_id"
        android:layout_below="@+id/bind_id"
        android:layout_alignLeft="@+id/bind_id"
        android:layout_alignStart="@+id/bind_id"
        android:layout_marginTop="75dp"
        android:layout_alignRight="@+id/bind_id"
        android:layout_alignEnd="@+id/bind_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:id="@+id/stop_id"
        android:layout_alignBaseline="@+id/get_id"
        android:layout_alignBottom="@+id/get_id"
        android:layout_alignRight="@+id/start_id"
        android:layout_alignEnd="@+id/start_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
